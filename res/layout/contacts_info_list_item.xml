<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/hsv_list_item"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:scrollbars="none"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#11000000">

            <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_info_checked"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_check"
                    android:button="@null"
                    />

            <LinearLayout
                    android:id="@+id/ll_contacts_info"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="0dp">

                    <TextView
                            android:id="@+id/tv_contacts_info_name"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="张1"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>

                    <TextView
                            android:id="@+id/tv_contacts_info_sex"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="先生"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"/>

                    <TextView
                            android:id="@+id/tv_contacts_info_phone"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="12345678900"
                            android:singleLine="true"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"/>

                </LinearLayout>

                <TextView
                        android:id="@+id/tv_contacts_info_address"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="北京市海淀区上地三街"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:singleLine="true"/>


            </LinearLayout>

            <ImageView
                    android:id="@+id/iv_contacts_info_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_query"
                    android:background="@drawable/edit_query_background"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:text="删除"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>


</HorizontalScrollView>